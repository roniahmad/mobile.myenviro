<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minHeight="72dp"
            app:cardBackgroundColor="@color/app_white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            android:elevation="@dimen/card_elevation"
            card_view:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_micro">

                <LinearLayout
                    android:id="@+id/date_container"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/surgery_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/date_surgery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25 Juni"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:layout_marginBottom="@dimen/spacing_micro"
                        android:gravity="center"
                        style="@style/Surgery.Date"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@color/grey_color"/>

                <LinearLayout
                    android:id="@+id/info_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:id="@+id/poli_names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Poli Gigi"
                        android:gravity="center|start"
                        style="@style/Surgery.Poli"/>

                    <TextView
                        android:id="@+id/doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:text="dr Shafiyyah Rayyana Zahra"
                        android:drawableStart="@drawable/ic_person"
                        style="@style/Surgery.Doctor"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:layout_marginBottom="@dimen/spacing_micro"/>

                    <TextView
                        android:id="@+id/med_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:drawableStart="@drawable/ic_polyclinic"
                        android:text="CIRCUMSISI"
                        style="@style/Surgery.Medtreatment"/>

                    <TextView
                        android:id="@+id/booking_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:drawableStart="@drawable/ic_book_online"
                        android:drawableTint="@color/colorAccent"
                        android:text="H001"
                        style="@style/Surgery.BookingCode"/>

                    <TextView
                        android:id="@+id/px_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:drawableStart="@drawable/ic_description"
                        android:text="BPJS"
                        style="@style/Surgery.PxCat"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>