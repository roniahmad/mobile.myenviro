<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.rsbunda.myenviro.ui.widget.AspectRatioView
        android:id="@+id/logo_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:maxHeight="@dimen/splash_image_size"
        android:fitsSystemWindows="true"
        app:aspectRatio="@dimen/aspect_16_9"
        app:layout_collapseMode="parallax">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:transitionName="@string/transition_session_image"
            android:src="@drawable/ic_logo_myenviro"
            tools:ignore="ContentDescription" />

    </com.rsbunda.myenviro.ui.widget.AspectRatioView>

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/SplashTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_container"
        android:gravity="center_horizontal"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_product_tag"
        style="@style/SplashTagLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:gravity="center_horizontal"
        android:text="@string/about_app_tagline" />

    <TextView
        android:id="@+id/tv_copyright"
        style="@style/SplashCopyright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/about_copyrights" />

</RelativeLayout>