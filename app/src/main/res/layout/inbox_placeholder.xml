<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_micro"
    android:background="@color/warm_grey">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:id="@+id/time_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/date_content"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                app:cardBackgroundColor="@color/placeholder_bg"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:id="@+id/date_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <View
                        android:id="@+id/pxreg_date"
                        android:background="@color/placeholder_fg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_size_small"
                        android:layout_margin="@dimen/spacing_micro"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/placeholder_fg"/>

                    <View
                        android:id="@+id/tv_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_size_medium"
                        android:background="@color/placeholder_fg"
                        android:layout_margin="@dimen/spacing_micro"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/event_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="@dimen/card_elevation"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            android:background="@color/placeholder_bg">

            <LinearLayout
                android:id="@+id/event_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal">

                <View
                    android:id="@+id/tv_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholder_text_size_xlarge"
                    android:background="@color/placeholder_fg"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_event_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cached"
                        android:tint="@color/placeholder_fg"
                        android:layout_gravity="top"/>

                    <View
                        android:id="@+id/tv_event_desc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_size_medium"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:background="@color/placeholder_fg" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/more_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/spacing_micro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_event_desc"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/more_button"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/ic_chevron_right_accent"
                        android:drawablePadding="@dimen/spacing_micro"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_marginRight="@dimen/padding_normal"
                        android:text="@string/more"/>

                </RelativeLayout >

                <!-- location -->
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal">

                    <ImageView
                        android:id="@+id/img_venue_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cached"
                        android:layout_gravity="top"
                        android:tint="@color/placeholder_fg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/tv_venue_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/placeholder_text_size_medium"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:background="@color/placeholder_fg" />

                        <View
                            android:id="@+id/tv_venue_address"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/placeholder_text_size_medium"
                            android:layout_marginTop="@dimen/spacing_micro"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:background="@color/placeholder_fg" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="@dimen/spacing_micro"
                    android:layout_marginBottom="@dimen/spacing_micro"/>

                <!-- contact person-->
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal">

                    <ImageView
                        android:id="@+id/img_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cached"
                        android:layout_gravity="top"
                        android:tint="@color/placeholder_fg"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/tv_cp_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/placeholder_text_size_small"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:background="@color/placeholder_fg"
                            />

                        <View
                            android:id="@+id/tv_cp_phone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/placeholder_text_size_small"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_marginTop="@dimen/spacing_micro"
                            android:background="@color/placeholder_fg" />

                        <TextView
                            android:id="@+id/tv_cp_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/placeholder_text_size_small"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_marginTop="@dimen/spacing_micro"
                            android:background="@color/placeholder_fg"/>

                    </LinearLayout>


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/note_container"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_outline"/>

                    <TextView
                        style="@style/HistorySubHeader"
                        android:id="@+id/note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="true"
                        android:text="Lorem Ipsum" />

                </LinearLayout>
                <!--
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/spacing_micro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info_container" >


                    <Button
                        android:id="@+id/feedback_button"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_marginRight="@dimen/padding_normal"
                        android:text="@string/my_announcement_rate_this_announcement"/>

                </RelativeLayout >
                -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>