<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_normal"
    android:layout_gravity="center">
    <!--
    640 : 320 : 160
    480 : 240 : 120
    -->
    <ImageView
        android:id="@+id/image_report"
        android:layout_width="@dimen/report_image_width"
        android:layout_height="@dimen/report_image_height"
        android:scaleType="fitCenter"
        android:transitionName="@string/transition_session_image"
        android:src="@drawable/ic_envihero"
        tools:ignore="ContentDescription"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_image_time_hint"
            style="@style/Client.Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="EST: Pukul 18:40" />

    </RelativeLayout>

</LinearLayout>

