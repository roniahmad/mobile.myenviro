<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="false"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/padding_normal">

            <com.rsbunda.myenviro.ui.widget.BezelImageView
                android:id="@+id/doctor_image"
                android:layout_width="@dimen/navdrawer_profile_image_size"
                android:layout_height="@dimen/navdrawer_profile_image_size"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_envihero"
                app:maskDrawable="@drawable/circle_mask"
                android:background="?selectableItemBackgroundBorderless"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/doctor_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        style="@style/Service.Name"
                        tools:text="dr Shafiyyah Rayyana Zahra"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rating_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:numStars="5"
                        android:rating="3.7"
                        android:stepSize="0.1"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4.5" />

                    <TextView
                        android:id="@+id/rating_respondent"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/rating_image_size"
                        android:drawableStart="@drawable/ic_person"
                        android:gravity="center"
                        android:text="54.012 total" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="@dimen/spacing_micro"
                    android:layout_marginBottom="@dimen/spacing_micro"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_toLeftOf="@id/reviews_link"
                        android:text="@string/select_day"
                        android:textSize="@dimen/app_text_size_medium"/>

                    <ImageButton
                        android:id="@+id/reviews_link"
                        android:layout_width="@dimen/a11y_min_touch_target_dimen"
                        android:layout_height="@dimen/a11y_min_touch_target_dimen"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/add_bookmark"
                        android:scaleType="center"
                        android:src="@drawable/ic_reviews"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/information_link"/>

                    <ImageButton
                        android:id="@+id/information_link"
                        android:layout_width="@dimen/a11y_min_touch_target_dimen"
                        android:layout_height="@dimen/a11y_min_touch_target_dimen"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/add_bookmark"
                        android:scaleType="center"
                        android:src="@drawable/ic_info"
                        android:tint="@color/colorAccent"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/spacing_micro"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>